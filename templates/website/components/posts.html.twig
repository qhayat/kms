{% if posts is defined and posts is not empty %}
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl mt-5">Nos articles</h2>
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 sm:mt-5 sm:pt-10 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {% for post in posts %}
            {% include '@Kms/website/components/posts/post.html.twig' with {post} %}
        {% endfor %}
    </div>
    {% include '@Kms/website/components/posts/pagination.html.twig' with {totalItems, page} %}
{% endif %}
