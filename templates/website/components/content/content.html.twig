{% if content is defined %}
    <article class="flex max-w-xl flex-col items-start justify-between">
        <div class="flex items-center gap-x-4 text-xs">
            <time dateTime="2020-03-16" class="text-gray-500">{{ content.createdAtString }}</time>
            <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Marketing</a>
        </div>
        <div class="group relative">
            {% if content.featuredImageUrl is not null %}
                <img src={{ content.featuredImageUrl }} alt="{{ content.title }}" class="w-full h-64 object-cover rounded-lg" />
            {% endif %}
            <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                <a href={{ content.url }}>
                    <span class="absolute inset-0"></span>
                    {{ content.type|trans|capitalize }}: {{content.title}}
                </a>
            </h3>
            <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
                {{ content.excerpt | raw }}
            </p>
        </div>
    </article>
{% endif %}
