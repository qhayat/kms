{% macro generate(type, id, message, form) %}
    <div class="modal fade" id="{{ id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ message }}
                </div>
                <div class="modal-footer">
                    <form action="{{ path('kms_setting_cache', {type}) }}" method="POST">
                        <input type="hidden" value="{{ type }}" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="fa fa-close"></i> {{ 'Cancel'|trans }}</button>
                        <button type="submit" class="btn btn-danger"><i class="fa fa-warning"></i> {{ 'Confirm'|trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
